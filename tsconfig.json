{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "module": "es2022",
    "moduleResolution": "node",
    "baseUrl": ".",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "noImplicitAny": true,
    "allowUnreachableCode": false,
    "skipLibCheck": true
  },
  "include": ["./src", "./tests"],
  "exclude": ["./dist"]
}
